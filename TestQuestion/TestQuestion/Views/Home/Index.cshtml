@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This web page will remain hosted till 21st july 2023.</p>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 ">
                <div class="form-group row">
                    <label for="topic" class="col-sm-2 col-form-label">Topic</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="topic" name="topicName" placeholder="Enter topic here" required>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label for="question" class="col-sm-2 col-form-label">Question</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="question" name="questionName" placeholder="Type your question here" >
                    </div>
                </div>

                    <button onclick="submitOnclic()" " class="btn btn-primary mt-2 ms-0 w-25">Submit</button>


                <div class="col-lg-2"></div>

            </div>
            <div id="solutions">
            </div>
        </div>

        <div class="row" id="result">
            <div class=" col-lg-2"></div>
            <div class="col-lg-20">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Result</label>
                    <textarea class="form-control" id="queryResult" rows="3"></textarea>
                </div>
            </div>

        </div>

    </div>
</div>
